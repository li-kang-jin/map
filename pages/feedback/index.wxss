/* pages/feedback/index.wxss */
page{
  background-color: #eee;
}
.fb_main{
  padding: 20rpx;
  color: #555;
}
.fb_tips{
  display: flex;
  flex-wrap: wrap;
}
.fb_tips text{
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_content{
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_content textarea{
  padding: 20rpx;

}
.fb_tool{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.fb_tool button{
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border: 1rpx solid #ccc;
  color: #999;
}
.form_btn_wrap{
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.form_btn_wrap button{
  margin: 0;
  background-color: var(--themeColor);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  width: 250rpx;
}
.up_img_item{
  margin: 20rpx 0 0 20rpx;
}