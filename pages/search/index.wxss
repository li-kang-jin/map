/* pages/search/index.wxss */
page{
background-color: #dcdedc;
}
.search_row{
  height:60rpx;
  display: flex;
  margin-top: 20rpx;
}
input{
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding-left: 30rpx;
}


button:not([size='mini']){
  width: 110rpx;
  height: 100%;
  font-size: 28rpx;
  font-weight: 300;
  padding: 0;
  text-align: center;
  line-height: 60rpx;
}

.search_content{
  margin-top: 30rpx;
}
.saarch_item{
  background-color: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #666;
  padding: 15rpx 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}