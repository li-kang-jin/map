/* pages/user/index.wxss */
page{
  background-color: #ecebe8;
}
.user_info_wrap{
 position: relative;
  height: 45vh;
  background-color: var(--themeColor);
  overflow: hidden;
 
}
.user_img_wrap{
  position: relative;
}
.user_bg{
  height: 50vh;
  filter: blur(15rpx);
}
.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_name{
  margin-top: 20rpx;
  font-size: 50rpx;
  color: #fff;
}
.user_btn{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 20rpx;
}

.user_content{
  position: relative;

}
.user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #555;
  padding-bottom: 100rpx;
}
.history_wrap{
  background-color: #fff;
  display: flex;
}
.history_wrap navigator{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.his_num{
  color: var(--themeColor)
}

.order_wrap{
  background-clip: #fff;
  background-color: #fff;
  margin-top: 30rpx;

}
.order_title{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.order_content{
  display: flex;
  text-align: center;
}
.order_content navigator{
 flex: 1;
 padding: 20rpx;
}
.iconfont{
  color: var(--themeColor);
  font-size: 45rpx;
}
.address_wrap{
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}
.app_info_wrap{
  margin-top: 30rpx;
  background-color: #fff;
}
.app_info_item{
 padding: 20rpx;
 border-bottom:5rpx solid #ecebe8; 
}
.contact{
  display: flex;
  justify-content:space-between;
}
.pecommend_wrap{
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}

  