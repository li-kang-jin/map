page{
  padding-bottom: 90rpx;
}

.detail_swiper swiper{
  height: 65vW;
  text-align: center;
}
.detail_swiper swiper image{
  width: 60%;
}
.goods_price{
  padding-left: 20rpx;
  color: var(--themeColor);
  font-size: 35rpx;
}
.goods_name_row{
  
  display: flex;
  justify-content: center;
  align-items: center;
 
}
.goods_name_row .goods_name{
  flex: 10;
  border-right: 1rpx solid #999;
  padding: 20rpx 30rpx;
 display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_collect{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.collect{
  font-size: 25rpx;
}
.goods_info_title{
 font-size: 30rpx;
 color: var(--themeColor);
 font-weight: 600;
 padding: 20rpx;
}

.btm_tool_item{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #777;
    position: relative;
}
.btm_tool button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool.btn_cart{
  background-color: #ffa500;
  color: #fff;
    flex: 2;
    text-align: center;
    line-height: 90rpx;
    font-size: 25rpx;
    font-weight: 600;
}
.btm_tool.btn_buy{
  background-color: #f75550;
  color: #fff;
   flex: 2;
   text-align: center;
   line-height: 90rpx;
   font-size: 25rpx;
    font-weight: 600;
}
.icon-weibiaoti19{
  color: orange;
