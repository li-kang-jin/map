/* pages/collect/index.wxss */
.collect_main{
  padding-bottom: 30rpx;
}
.collect_title{
  padding: 40rpx 0;
  background-color: #f3f4f6;
}
.collect_tips{
  padding: 15rpx; 
  border: 1rpx solid #ccc;
  margin-left: 30rpx;
  background-color: #fff;
}
.active{
  color: var(--themeColor);
  border: 3rpx solid currentColor;
}
.goods_item{
  display: flex;
  height: 250rpx;
  border-bottom: 1rpx solid #ccc;
}
.goods_img_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 3;
}
.goods_img_wrap image{
  width: 80%;
}
.goods_info_wrap{
  flex: 5;
}
.goods_info_wrap{
  display: flex;
  flex-direction: column;
  justify-content:space-evenly;
}
.goods_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_info_wrap .goods_price{
  height: 50rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  padding-left: 45rpx;
  color: var(--themeColor);
}